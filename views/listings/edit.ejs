<% layout("/layouts/boilerplate")-%>

    <div class="row sarabun-regular">
    <div class="col-8 offset-2 my-3">
    <h3>Edit your listing</h3>
    <form method="POST" action="/listings/<%=list._id%>?_method=PUT" class="needs-validation sarabun-regular" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required class="form-control" type="text" name="listing[title]" value="<%=list.title%>">
            <div class="valid-feedback">Title looks good!</div>
            <div class="invalid-feedback">Please enter a title !</div>
        </div>
      
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required class="form-control" name="listing[description]" rows="5"><%=list.description%></textarea>
            <div class="invalid-feedback">Please write a short description !</div>
        </div>
        <div class="mb-3">
            <img src="<%=original_image_url%>" alt="">
        </div>
        <div class="mb-3">
        <label for="image" class="form-label">Upload new image</label>
            <input class="form-control" type="file" name="listing[image]" >
            <div class="invalid-feedback">You forget the image link !</div>
        </div>
       
        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="price" class="form-label">Price</label>
            <input required class="form-control" type="number" name="listing[price]" value="<%=list.price%>">
            <div class="invalid-feedback">Enter the Price.</div>
        </div>
        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
            <input required class="form-control" type="text" name="listing[country]" value="<%=list.country%>">
            <div class="invalid-feedback">Please enter valid country! </div>
        </div>
        </div>
 
        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
            <input required class="form-control" type="text" name="listing[location]" value="<%=list.location%>">
            <div class="invalid-feedback">Please enter location! </div>
        </div>
        
      
      
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
    </div>
    </div>

